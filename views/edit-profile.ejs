<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>Edit Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <h6 class="py-4">Edit Profile</h6>
            <form action="/edit-profile" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="py-3">
                    <label for="firstName">First Name:</label>
                    <input type="text" name="firstName" value="<%= user.firstName %>" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="lastName">Last Name:</label>
                    <input type="text" name="lastName" value="<%= user.lastName %>" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="email">Email:</label>
                    <input type="email" name="email" value="<%= user.email %>" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="password">New Password:</label>
                    <input type="password" name="password"  class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Update Profile</button>
                </div>
                <div class="py-3">
                    <a href="/sessions" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">cancel</a>
                </div>
            </form>
            <div class="notify">
                <div class="error">
                    <% if(messages && messages.error && messages.error.length > 0)  { %>
                        <% for(var i = 0; i < messages.error.length; i++) { %>
                            <p> <%= messages.error[i] %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="success">
                    <% if(messages && messages.success && messages.success.length > 0)  { %>
                        <% for(var i = 0; i < messages.success.length; i++) { %>
                            <p> <%= messages.success[i] %></p>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
