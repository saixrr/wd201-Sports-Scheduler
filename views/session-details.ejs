<!DOCTYPE html>
<html>
<head>
  <title>Session Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }

    h1 {
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    .button-container {
      margin-top: 20px;
    }

    .button-container button {
      padding: 10px 20px;
      margin-right: 10px;
      background-color: #4caf50;
      color: #fff;
      border: none;
      cursor: pointer;
    }

    .button-container button.cancel {
      background-color: #f44336;
    }
  </style>
</head>
<body>
  <h1>Session Details</h1>
  <a href="/signout" class="text-green-600">Sign-out</a>
  <a href="/sports/<%= session.sportName %>" class="text-green-600">Go Back</a>
  <table>
    <tr>
      <th>Venue</th>
      <td><%= session.venue %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= session.date %></td>
    </tr>
    <tr>
      <th>Time</th>
      <td><%= session.time %></td>
    </tr>
    <tr>
      <th>Player Count</th>
      <td><%= session.count %></td>
    </tr>
    <tr>
      <th>Members List</th>
      <td><%= session.membersList %></td>
    </tr>
    <tr>
      <th>Remaining</th>
      <td><%= session.count - session.membersList.length %></td>
    </tr>
  </table>

  <div class="button-container">
    <button onclick="cancelSession('<%= session.id %>')">Cancel Session</button>
    <button onclick="editSession('<%= session.id %>')">Edit Session</button>
  </div>

  <script>
    function cancelSession(sessionId) {
      console.log('Cancel session clicked, sessionId:', sessionId);
    }

    function editSession(sessionId) {
      console.log('Edit session clicked, sessionId:', sessionId);
    }
  </script>
</body>
</html>
